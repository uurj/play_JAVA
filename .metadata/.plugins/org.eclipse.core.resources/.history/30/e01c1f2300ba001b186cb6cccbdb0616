package com.work.view;

public class ArrayTest2 {

	/* 2차원 배열 :
	 * --행과 열의 구조를 갖는 배열
	 * --행마다 열의 크기를 동일하게 생성
	 * --행마다 열의 크기를 다르게 생성
	 * 
	 * 1. 선언, 생성, 초기화
	 * --선언 
	 * 	[modifiers] 타입[][] 2차원배열명; --이거권장
	 * 	[modifiers] 타입 2차원배열명[][];
	 * --생성
	 * 	2차원 배열명 = new 타입[행크기][열크기];
	 * --초기화(배열요소 사용)
	 * 	2차원배열명[행번호][열번호] = 값;
	 * 
	 * 2. 선언+생성, 초기화
	 * [modifiers] 타입[][] 2차원배열명 = new 타입[행크기][열크기];
	 * 
	 * 3.선언+생성+초기화 
	 */
	public static void main(String[] args) {
		doA();
		
	}
	//행과 열크기 동일하게 지정
	
	public static void doA() {
		/*1반 80, 90, 70 80
		*2반 70, 60, 50, 88
		*3반 95, 87, 67, 92
		*/
		
		//1.선언 +2. 생성
		int[][] scores = new int[3][4];
		
		//3. 2차원배열요소 값 할당
		//1반 80, 90, 70 80
		scores[0][0] = 80;
		scores[0][1] = 90;
		scores[0][2] = 70;
		scores[0][3] = 80;
		
		//2반 70, 60, 50, 88
		scores[1][0] = 70;
		scores[1][1] = 60;
		scores[1][2] = 50;
		scores[1][3] = 88;
		
		//3반 95, 87, 67, 92
		scores[2][0] = 95;
		scores[2][1] = 87;
		scores[2][2] = 67;
		scores[2][3] = 92;
		
		
		//3. 2차원배열요소 출력 
		
		int total = 0;
		int avg = 0;
		
		for(int i = 0; i < scores.length; i++) {	//행크기만큼 반복
			for(int j = 0; j < scores[i].length; j++) {	//해당행의 열크기만큼 반복
//		 System.out.print(scores[i][j] + "\t");
//		 System.out.println();
//		 total += scores[i][j];
//		 avg = total/4;
//			}
//			System.out.print(total);
			}
			}		
	}
}
